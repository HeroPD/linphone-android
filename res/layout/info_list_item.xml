<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/basic_listview_item_height"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <io.karim.MaterialRippleLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:mrlRippleColor="@color/main_app_effect_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:text="Medium Text"
                android:textColor="@color/app_main_text"
                android:textSize="@dimen/app_text_medium" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_gravity="right"
                android:singleLine="true"
                android:text="message detail text "
                android:textColor="@color/app_sub_text"
                android:textSize="@dimen/app_text_small" />
        </LinearLayout>
    </io.karim.MaterialRippleLayout>

</LinearLayout>