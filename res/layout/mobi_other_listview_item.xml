<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <io.karim.MaterialRippleLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrlRippleColor="@color/main_app_effect_color" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/other_list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tab_profile" />

            <TextView
                android:id="@+id/other_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/other_list_icon"
                android:text="Large Text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/app_text_medium"
                android:textStyle="normal" />
        </RelativeLayout>
    </io.karim.MaterialRippleLayout>

</LinearLayout>