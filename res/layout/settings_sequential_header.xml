<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/mn.mobinet.mnp75"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_listview_item_height" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/sep1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/setting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/mnp_ring_base_location_first"
                    android:textColor="@color/app_main_text"
                    android:textSize="@dimen/app_text_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sep1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/switch_active"
                android:background="@android:color/holo_blue_light" 
                android:orientation="vertical"/>

            <com.rey.material.widget.Switch
                android:id="@+id/switch_active"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:gravity="center"
                android:padding="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobi_divider" />

        <io.karim.MaterialRippleLayout
            android:id="@+id/number_of_rings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrlRippleColor="@color/main_app_effect_color" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/basic_listview_item_height" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/number"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_tit"
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="@string/mnp_base_location_number_of_rings"
                        android:textColor="@color/app_main_text"
                        android:textSize="@dimen/app_text_large" />
                </LinearLayout>

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow"
                    android:lines="1"
                    android:text="1"
                    android:textColor="@color/app_main_text"
                    android:textSize="@dimen/app_text_large" />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/detail_arrow" />
            </RelativeLayout>
        </io.karim.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobi_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_listview_item_height" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/sep3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/mnp_continue_if_base_location_is_busy"
                    android:textColor="@color/app_main_text"
                    android:textSize="@dimen/app_text_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sep3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/switch_active1"
                android:background="@android:color/holo_blue_light" 
                android:orientation="vertical"/>

            <com.rey.material.widget.Switch
                android:id="@+id/switch_active1"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:gravity="center"
                android:padding="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobi_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_listview_item_height" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/sep4"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/mnp_caller_may_stop_search"
                    android:textColor="@color/app_main_text"
                    android:textSize="@dimen/app_text_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sep4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/switch_active2"
                android:background="@android:color/holo_blue_light"
                android:orientation="vertical" />

            <com.rey.material.widget.Switch
                android:id="@+id/switch_active2"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:gravity="center"
                android:padding="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobi_divider" />

        <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/numpad_background_top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" 
        android:text="@string/mnp_locations"/>
    </LinearLayout>

</LinearLayout>